<p id="notice"><%= notice %></p>
<h1>Tasks : </h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
     <% if task.completed? %>
 
      <tr>
      
        <td><%= task.title %></td>
        <td> task is Done</td>
        <td><%= link_to 'Show', task ,class: "btn btn-outline-dark"%></td>
        <td><%= link_to 'Edit', edit_task_path(task) , class: "btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-outline-dark" %></td>
      </tr>
    <% else %>
         <tr>
        <td><%= task.title %></td>
    
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>

  </tbody>
</table>






