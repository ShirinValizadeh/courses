
<br/>


<table class="table table-hover">

  <thead class="table-success">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <% if course.user == current_user %>

      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.published %></td>
        <td><%= link_to 'Show', author_course_path(course) ,class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_author_course_path(course) , class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Destroy', author_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }  ,class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_author_course_path , class:"btn btn-dark"%>
