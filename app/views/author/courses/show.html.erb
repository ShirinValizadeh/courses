
<div class="container">
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>


<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @course.published %>
</p>



  <% if @course.image.representable? %>
   <%= image_tag @course.image.representation(resize_to_limit: [300, 200]) %>
  <% end %>

<h3>Lessons</h3>

<div class="mb-5">
  <% @course.lessons.each do |lesson| %>
    <div>
      <%= link_to lesson.title, author_course_lesson_path(@course, lesson) %>
    </div>
  <% end %>




</div>

 <%= link_to 'Add lesson', new_author_course_lesson_path(@lesson, course_id: @course.id) %> | 
<%= link_to 'Edit',  edit_author_course_path(@course) %> |
<%= link_to 'Back', author_courses_path %>

</div>