<div class="row">
<div class="col-lg-2"></div>

<div class="col-lg-8 m-5 p-2">
  <div class="container p-2">

    <div class="card  p-2 b-color shadow-lg" style="max-width: 740px;">
      <div class="row g-0 p-2">

        <div class="col-md-4 p-2">
          <% if @course.image.representable? %>
          <%= image_tag @course.image.representation(resize_to_limit: [300, 200]) , class: "img-cours-id" %>
          <% end %>
        </div>

        <div class="col-md-8 p-2">
          <div class="card-body">
            <h5 class="card-title text-capitalize"><%= @course.title %></h5>
            <p class="card-text"><%= @course.description %></p>
            <p class="card-text"><%= @course.body %></p>
            <p class="card-text"><%= @course.published %></p>
            <%#Published: <%= @course.published %>
          </div>
        </div> 

      </div>

      <div class="row g-0 p-2">
          <div class="card-body p-2">
            
            
            <table class="table table-hover">
                  <% @course.lessons.each do |lesson| %>
                     
                      <thead class="table-light">
                          <tr>
                            <td>
                                <%= link_to lesson.title, author_course_lesson_path(@course, lesson),  class: "text-decoration-none text-reset text-capitalize" %>
                            </td>
                          </tr>
                      </thead>
 
              <% end %>
            </table>



          
          </div>
      </div>    
    </div>
    <br/>
    <br/>



       <%= link_to 'Add lesson', new_author_course_lesson_path(@lesson, course_id: @course.id) , class: "btn btn-success btn-sm"%> | 
      <%= link_to 'Edit',  edit_author_course_path(@course) , class: "btn btn-dark btn-sm" %> |
      <%= link_to 'Back', author_courses_path , class: "btn btn-dark btn-sm" %>

  </div>
</div>
<div class="col-lg-2"></div>
</div>











