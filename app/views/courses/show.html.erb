
<div class="container">
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>


<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @course.published %>
</p>

<% if @course.enrolled?(current_user) %>
  <h3>Lessons</h3>

  <div class="mb-5">
    <% @course.lessons.each do |lesson| %>
      <div>
        <%= link_to lesson.title, course_lesson_path(@course, lesson) %>
      </div>
    <% end %>
  </div>
  <% else %>
    <%= form_with(url: course_enrollments_path(@course)) do |form| %>
    <%= form.submit "Enroll", class:"btn btn-success" %>
  <% end %>

<% end %>

<%= link_to 'Back', courses_path %>

</div>