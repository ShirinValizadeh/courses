
<div class="container">
<table class="table table-hover">

   <thead class="table-success">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>  
      <tr>
        <td> <%= @course.title %></td>
        <td>  <%= @course.description %></td>
        <td><%= @course.published %></td>
        
      </tr>
  </tbody>
</table>
<br/>
<br/>

<% if @course.enrolled?(current_user) %>
    <h3>Lessons Liste</h3>


    <table class="table table-hover">

    <% @course.lessons.each do |lesson| %>
        <thead class="table-light">
          <tr>

            <td>
              <%= link_to lesson.title, course_lesson_path(@course, lesson),  class: "text-decoration-none text-reset" %>
            </td>
          </tr>

        </thead>

    <% end %>
    </table>

  <% else %>
    <%= form_with(url: course_enrollments_path(@course)) do |form| %>
    <%= form.submit "Enroll", class:"btn btn-success" %>
  <% end %>

<% end %>

    <%= link_to 'Back', courses_path , class: 'btn btn-dark btn-sm' %>

</div>