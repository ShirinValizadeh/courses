
<div class="container">
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>


<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @course.published %>
</p>

<h3>Lessons</h3>

<div class="mb-5">
  <% @course.lessons.each do |lesson| %>
    <div>
      <%= link_to lesson.title, course_lesson_path(@course, lesson) %>
    </div>
  <% end %>
</div>


<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>

</div>