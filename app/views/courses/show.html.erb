<div class="row">
<div class="col-lg-2"></div>

<div class="col-lg-8 m-5 p-2">
  <div class="container p-2">

    <div class="card  p-2 b-color shadow-lg" style="max-width: 740px;">
      <div class="row g-0 p-2">

        <div class="col-md-4 p-2">
          <% if @course.image.representable? %>
          <%= image_tag @course.image.representation(resize_to_limit: [300, 200]) , class: "img-cours-id" %>
          <% end %>
        </div>

        <div class="col-md-8 p-2">
          <div class="card-body">
            <h5 class="card-title"><%= @course.title %></h5>
            <p class="card-text"><%= @course.description %></p>
            <%#Published: <%= @course.published %>
          </div>
        </div> 

      </div>

      <div class="row g-0 p-2">
          <div class="card-body p-2">
            <% if @course.enrolled?(current_user) %>
            <h5>Lessons Liste</h5>
            <table class="table table-hover">
                  <% @course.lessons.each do |lesson| %>

                      <thead class="table-light">
                          <tr>
                            <td>
                                <%= link_to lesson.title, course_lesson_path(@course, lesson),  class: "text-decoration-none text-reset text-uppercase" %>
                            </td>
                          </tr>
                      </thead>
 
              <% end %>
            </table>

            <% else %>
                <%= form_with(url: course_enrollments_path(@course)) do |form| %>
                <%= form.submit "Enroll", class:"btn btn-success shadow-lg " %>
            <% end %>

            <% end %>
          </div>
      </div>    
    </div>
    <br/>
    <br/>



    <%= link_to 'Back', courses_path , class: 'btn btn-dark btn-sm' %>

  </div>
</div>
<div class="col-lg-2"></div>
</div>

