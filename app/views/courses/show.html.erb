<div class="row">
<div class="col-lg-2"></div>

<div class="col-lg-8 mt-5">
  <div class="container">

    <div class="card mb-3 bColor" style="max-width: 540px;">
      <div class="row g-0">

        <div class="col-md-4">
          <% if @course.image.representable? %>
          <%= image_tag @course.image.representation(resize_to_limit: [300, 200]) %>
          <% end %>
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title text-uppercase"><%= @course.title %></h5>
            <p class="card-text"><%= @course.description %></p>
            <p class="card-text"><small class="text-muted">Published: <%= @course.published %></small></p>
          </div>
        </div> 

      </div>

      <div class="row g-0">
          <div class="card-body">
            <% if @course.enrolled?(current_user) %>
            <h5>LESSONS LISTE</h5>
            <table class="table table-hover">
                  <% @course.lessons.each do |lesson| %>
              <thead class="table-light">
                  <tr>
                    <td>
                        <%= link_to lesson.title, course_lesson_path(@course, lesson),  class: "text-decoration-none text-reset text-uppercase" %>
                    </td>
                  </tr>
              </thead>
              <% end %>
            </table>

            <% else %>
                <%= form_with(url: course_enrollments_path(@course)) do |form| %>
                <%= form.submit "Enroll", class:"btn btn-success" %>
            <% end %>

            <% end %>
          </div>
      </div>    
    </div>
    <br/>
    <br/>



    <%= link_to 'Back', courses_path , class: 'btn btn-dark btn-sm' %>

  </div>
</div>
<div class="col-lg-2"></div>
</div>

