

<br/>

<table class="table table-hover">
  <thead class="table-success">
<br/>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.title %></td>
        <td><%= posting.description %></td>
        <td><%= link_to 'Show', admin_posting_path(posting) ,class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_admin_posting_path(posting) , class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Destroy', admin_posting_path(posting), method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posting', new_admin_posting_path , class:"btn btn-dark" %>
